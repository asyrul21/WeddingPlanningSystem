<% include ../partials/header %>

<div class="container">
    <div class="row">
         <h1 style="text-align: center;">Edit <%= task.name %></h1>
         
         <div style = "width: 30%; margin: 25px auto;">
                <form action="/tasks/<%= task._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="text" name="task[name]" value="<%= task.name %>">
                    </div>
                    
                     <div class="form-group">
                         <input class="form-control" type="text" name="task[image]" value="<%= task.image %>">
                     </div> 
                     
                      <div class="form-group">
                         <input class="form-control" type="text" name="task[description]" value="<%= task.description %>">
                     </div> 
                     
                      <div class="form-group">
                         <input class="form-control" type="text" name="task[progress]" value="<%= task.progress %>">
                     </div> 
                     
                     <div class="form-group">
                         <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                     </div>
                </form>
                   <a href="/tasks/<%=task._id%>">Go back</a>
             
         </div>
     
    
    </div>
</div>
<% include ../partials/footer %>